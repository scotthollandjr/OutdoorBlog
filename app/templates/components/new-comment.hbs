<div class="new-msg-form row">
	<div class="col-xs-2">
	</div>
	<form class="col-xs-8">
		<h4>Leave a comment:</h4>
		<div class="form-group">
			{{input type="text" placeholder="Name" value=name class="name-input form-control"}}
		</div>

		<div class="form-group">
			{{textarea type="textarea" placeholder="Message" value=content class="msg-input form-control"}}
		</div>

		<button {{action 'addComment'}} class="submit btn btn-primary">Submit</button>
	</form>
	<div class="col-xs-2">
	</div>
</div>
