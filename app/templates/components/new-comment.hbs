<div class="new-msg-form">
	<form>
		<div class="form-group">
			{{input type="text" placeholder="Name" value=name class="name-input"}}
		</div>

		<div class="form-group">
			{{textarea type="textarea" placeholder="Message" value=content class="msg-input"}}
		</div>

		<button {{action 'addComment'}} class="submit btn">Submit</button>
	</form>
</div>
